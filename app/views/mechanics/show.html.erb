<h1><%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_exp %></p>
<section class="rides">
  <h2>Current Rides Assigned:</h2>
  <ul>
    <% @mechanic.rides.each do |ride| %>
    <li><%= ride.name %></li>
    <% end %>
  </ul>
</section>
<p>Add a ride to workload:</p>
<%= form_tag "/mechanic/#{@mechanic.id}" do %>
  <%= label_tag :ride_id %>
  <%= search_field_tag :ride_id %>
  <%= submit_tag 'Submit' %>
<% end %>
